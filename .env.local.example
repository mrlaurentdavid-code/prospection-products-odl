# ============================================
# SUPABASE
# ============================================
# URL de votre projet Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Clé anonyme publique (anon key)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Clé de service (service_role key) - NE JAMAIS EXPOSER CÔTÉ CLIENT
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# ANTHROPIC (Claude API)
# ============================================
# Clé API Anthropic pour l'analyse IA
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ============================================
# TELEGRAM BOT
# ============================================
# Token du bot Telegram (obtenu via BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ID du chat Telegram (pour les notifications)
TELEGRAM_CHAT_ID=123456789

# ============================================
# SENDGRID (Email)
# ============================================
# Clé API SendGrid
SENDGRID_API_KEY=SG.your-api-key-here

# Email d'envoi (doit être vérifié dans SendGrid)
SENDGRID_FROM_EMAIL=prospection@odl-tools.ch

# ============================================
# APPLICATION
# ============================================
# URL de l'application (production)
NEXT_PUBLIC_APP_URL=https://prospection.odl-tools.ch

# Environnement (development, staging, production)
NODE_ENV=development
